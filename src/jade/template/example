gulp.task('sprite', function () {
  var spriteData = gulp.src(path.src.sprite).pipe(spritesmith({
    imgName: 'sprite.png',
    cssName: '/style/partials/sprite.scss',
    imgPath: '../images/sprite.png',
    padding: 10
  }));
  return spriteData.pipe(gulp.dest('src/images/img/'));
});